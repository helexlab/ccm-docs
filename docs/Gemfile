source "https://rubygems.org"

# Use a consistent Jekyll version for local testing
gem "jekyll", "~> 4.3"

# The theme gem for local compilation
gem "just-the-docs"

# Plugins required for site features and local stability
group :jekyll_plugins do
  gem "webrick"       # Required for local server (Ruby 3.1+)
  gem "jekyll-feed"
  gem "jekyll-sitemap" # Recommended for documentation SEO

  # This gem is essential for compiling the theme's SCSS locally without errors
  gem "sassc"
end

# Windows and JRuby compatibility (Optional, but safe to keep)
platforms :mingw, :x64_mingw, :mswin, :jruby do
  gem "tzinfo", ">= 1", "< 3"
  gem "tzinfo-data"
  gem "wdm", "~> 0.1.1" 
end